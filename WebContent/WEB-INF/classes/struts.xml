<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
     "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
     "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="background" namespace="/background" extends="struts-default">
		<!-- 定义一个拦截器 -->  
		<interceptors>  
			<interceptor name="background" class="ylr.Interceptor.background.MainInterceptor">  
			</interceptor>  
			<!-- 拦截器栈 -->  
			<interceptor-stack name="mainInterceptor">  
				<interceptor-ref name="defaultStack" />  
				<interceptor-ref name="background" />  
			</interceptor-stack>  
		</interceptors>
		
		<!-- 全局返回值 -->
		<global-results>
			<result name="login">/background/sys/login.jsp</result>
		</global-results>
	
		<!-- 后台主界面 -->
		<action name="mainPage" class="ylr.actions.background.mainPageAction">
			<result name="success">/background/mainPage.jsp</result>
			
			<!-- 使用此拦截器 -->  
            <interceptor-ref name="mainInterceptor" />
		</action>
		
		<!-- 登陆 -->
		<action name="login" class="ylr.actions.background.sys.UserLoginAction">
			<result name="success" type="chain">
				<param name="actionName">mainPage</param>
				<param name="namespace">/background</param>
			</result>
		</action>
		
		<!-- 退出登陆 -->
		<action name="logout" class="ylr.actions.background.sys.UserLogoutAction">
		</action>
		
		<!-- 修改密码 -->
		<action name="changePassword" class="ylr.actions.background.sys.ChangeUserPasswordAction">
			<result name="success">/background/sys/changePassword.jsp</result>
			
			<!-- 使用此拦截器 -->  
            <interceptor-ref name="mainInterceptor" />
		</action>
		
		<!-- 获取菜单列表 -->
		<action name="menuList" class="ylr.actions.background.sys.menu.MenuListAction">
			<result name="success">/background/sys/menu/menu_list.jsp</result>
			
			<!-- 使用此拦截器 -->  
            <interceptor-ref name="mainInterceptor" />
		</action>
		
		<!-- 获取菜单信息 -->
		<action name="menuQuery" class="ylr.actions.background.sys.menu.MenuQueryAction">
			<result name="success">/background/sys/menu/menu_edit.jsp</result>
			
			<!-- 使用此拦截器 -->  
            <interceptor-ref name="mainInterceptor" />
		</action>
		
		<!-- 保存菜单 -->
		<action name="menuSave" class="ylr.actions.background.sys.menu.MenuSaveAction">
		    <result name="success">/background/message/closePopWindow.jsp</result>
			<result name="error">/background/sys/menu/menu_edit.jsp</result>
			
			<!-- 使用此拦截器 -->  
            <interceptor-ref name="mainInterceptor" />
		</action>
		
		<!-- 删除菜单 -->
		<action name="menuDelete" class="ylr.actions.background.sys.menu.MenuDeleteAction">
			<result name="success" type="chain">
				<param name="actionName">menuList</param>
				<param name="namespace">/background</param>
			</result>
			<!-- 使用此拦截器 -->  
            <interceptor-ref name="mainInterceptor" />
		</action>
		
		<!-- 获取菜单关联页面列表 -->
		<action name="menuPageList" class="ylr.actions.background.sys.menu.PageListAction">
			<result name="none">/background/sys/menu/page_list.jsp</result>
			<!-- 使用此拦截器 -->  
            <interceptor-ref name="mainInterceptor" />
		</action>
		
		<!-- 获取菜单关联页面信息 -->
		<action name="menuPageQuery" class="ylr.actions.background.sys.menu.PageQueryAction">
			<result name="none">/background/sys/menu/page_edit.jsp</result>
			<!-- 使用此拦截器 -->  
            <interceptor-ref name="mainInterceptor" />
		</action>
		
		<!-- 保存菜单关联页面信息 -->
		<action name="menuPageSave" class="ylr.actions.background.sys.menu.PageSaveAction">
			<result name="success" type="chain">
				<param name="actionName">menuPageList</param>
				<param name="namespace">/background</param>
			</result>
			<result name="error">/background/sys/menu/page_edit.jsp</result>
			<!-- 使用此拦截器 -->  
            <interceptor-ref name="mainInterceptor" />
		</action>
		
		<!-- 删除关联页面 -->
		<action name="menuPageDelete" class="ylr.actions.background.sys.menu.PageDeleteAction">
			<result name="none" type="chain">
				<param name="actionName">menuPageList</param>
				<param name="namespace">/background</param>
			</result>
			<!-- 使用此拦截器 -->  
            <interceptor-ref name="mainInterceptor" />
		</action>
	</package>
</struts>